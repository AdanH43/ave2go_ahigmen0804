<odoo>
    <data>

        <!-- Vista Tree para Viajes -->
        <record model="ir.ui.view" id="view_viaje_tree">
            <field name="name">Viaje Tree</field>
            <field name="model">ave.viaje</field>
            <field name="arch" type="xml">
                <tree string="Viajes">
                    <field name="nombre"/>
                    <field name="fecha_viaje"/>
                    <field name="duracion_minutos"/>
                    <field name="numero_asientos"/>
                    <field name="asientos_disponibles"/>
                </tree>
            </field>
        </record>

        <!-- Vista Formulario para Viajes -->
        <record model="ir.ui.view" id="view_viaje_form">
            <field name="name">Viaje Form</field>
            <field name="model">ave.viaje</field>
            <field name="arch" type="xml">
                <form string="Viaje">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="fecha_viaje"/>
                            <field name="duracion_minutos"/>
                            <field name="numero_asientos"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>